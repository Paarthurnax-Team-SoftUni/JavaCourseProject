<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="homePage" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="650.0" prefWidth="850.0"
            stylesheets="@../resources/styles/styles.css" xmlns="http://javafx.com/javafx/8.0.111"
            fx:controller="controllers.StartController">
    <children>
        <Rectangle fx:id="backgroundBox" arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="519.0" layoutX="165.0"
                   layoutY="69.0" stroke="BLACK" strokeType="INSIDE" width="517.0"/>
        <Button fx:id="showScoresBtn" alignment="CENTER" layoutX="235.0" layoutY="280.0" mnemonicParsing="false"
                onAction="#showHighScores" prefHeight="110.0" prefWidth="380.0" text="High Scores" textFill="#141414">
            <font>
                <Font name="Chiller" size="50.0"/>
            </font>
        </Button>
        <Button fx:id="closeBtn" alignment="CENTER" layoutX="235.0" layoutY="445.0" mnemonicParsing="false"
                onAction="#onClose" prefHeight="110.0" prefWidth="380.0" text="Quit Game" textFill="#171717">
            <font>
                <Font name="Chiller" size="50.0"/>
            </font>
        </Button>
        <Button fx:id="startBtn" alignment="CENTER" layoutX="235.0" layoutY="110.0" mnemonicParsing="false"
                onAction="#startNewGame" prefHeight="110.0" prefWidth="380.0" text="Start Game" textAlignment="CENTER"
                underline="true">
            <font>
                <Font name="Chiller" size="50.0"/>
            </font>
        </Button>
    </children>
</AnchorPane>
